---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Button from "@components/ui/button.astro";

const documents = [
  {
    title: "Document 1",
    url: "/path/to/document1.pdf",
    description: "This is the first document description.",
  },
  {
    title: "Document 2",
    url: "/path/to/document2.pdf",
    description: "This is the second document description.",
  },
  {
    title: "Document 3",
    url: "/path/to/document3.pdf",
    description: "This is the third document description.",
  },
  // Add more documents as needed
];
---

<Layout title="Dokumenty do pobrania">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex justify-center">
      <div class="mt-16 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Dokumenty do pobrania</h1>
        <div class="mt-16">
          {
            documents.map((document) => (
              <>
                <a href={document.url} target="_blank" class="block mt-4 text-blue-500 hover:text-blue-600 hover:underline">
                  {document.title}
                </a>
                <p class="text-sm text-gray-500">{document.description}</p>
              </>
            ))
          }
        </div>
      </div>
    </div>
  </Container>
</Layout>
